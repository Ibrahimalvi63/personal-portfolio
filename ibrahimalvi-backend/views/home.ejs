<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>IBRAHIM.ALVI</title>
  </head>
  <body style="background-color: rgb(27, 2, 20)">
    <div style="margin: 50px; padding: 10px">
      <h1 style="color: white">Messages from clients</h1>
      <ul style="list-style-type: none; margin: 0 auto; text-align: left">
        <% messages.forEach(message => { %>
        <li
          style="
            margin: 30px auto;
            line-height: 1;
            background-color: lightgray;
            border-radius: 10px;
            padding: 10px;
          "
        >
          <div>
            <p><b>Name:</b> <%= message.name %></p>
            <p><b>Email:</b> <%= message.email %></p>
            <p><b>Subject:</b> <%= message.subject %></p>
            <p><b>Message:</b> <%= message.message %></p>
          </div>
        </li>

        <%})%>
      </ul>
    </div>
  </body>
</html>
